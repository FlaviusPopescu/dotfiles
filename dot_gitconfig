[user]
	name = Flavius Popescu
	email = FlaviusPopescu@users.noreply.github.com
[alias]
	authors = !git log --format='%aN <%aE>' | sort -u --ignore-case
	b = branch
	ca = commit --amend
	can = commit --amend --no-edit
	card = !git commit --amend --no-edit --date="$(date -u +%Y-%m-%dT%H:%M:%S%z)"
	cu = !git commit --date="$(date -u +%Y-%m-%dT%H:%M:%S%z)"
	co = checkout
	conflicts = diff --name-only --diff-filter=U
	g = log --oneline --graph --decorate
	l = pull
	lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	lg = log
	lgg = log --pretty=fuller
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	local-branches = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
	ls = ls-files
	p = push
	r = rebase
	ra = rebase --abort
	recent-branches = !git branch --sort=-committerdate | head
	rc = rebase --continue
	ri = rebase -i
	sl = stash list
	sp = stash pop
	ss = stash
	st = status
[core]
	autocrlf = input
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[push]
	autoSetupRemote = true
